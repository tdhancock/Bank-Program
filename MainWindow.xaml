<Window x:Class="Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button x:Name="page1" Content="Add Account" MinWidth="100" Click="AddAccount"/>
            <Button x:Name="page2" Content="Find Account" MinWidth="100" Click="FindAccount" Margin="10,0,0,0"/>
            <Button x:Name="page3" Content="Manage Account" MinWidth="100" Click="manageAccount" Margin="10,0,0,0" Height="34"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,35,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
